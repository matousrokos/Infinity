{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "networkingScenario": {
      "type": "string",
      "allowedValues": [
        "networkOnly",
        "network+VPN"
      ],
      "defaultValue": "networkOnly"
    },
    "conferenceNodeScenario": {
      "type": "string",
      "allowedValues": [
        "Master+ConfNodes",
        "Master+ConfNodes+EdgeNodes"
      ]
    },
    
    "pexipMGMTNodeAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "pexipMGMTNodeAdminPassword": {
      "type": "securestring"
    },
    "pexipConfNodeAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "pexipConfNodeAdminPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "networkDeploymentTemplateFileURI": "",
    "vMsDeploymentTemplateFileURI": "",
    "templateAPIVersion": "2017-05-10"
  },
  "resources": [
    {
      "name": "networkDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('networkDeploymentTemplateFileURI')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('networkDeploymentTemplateFileURI')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {

        }
      }
    },
    {
      "name": "vMsDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": "Microsoft.Resources/deployments/networkDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('vMsDeploymentTemplateFileURI')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {

        }
      }
    }

  ],
  "outputs": {}
}
